---
import CareerSectionItem from "@/components/career/CareerSectionItem.astro";
import BriefIcon from "@/components/shared/icons/BriefIcon.astro";
import { careers } from "@/data/careers";
---

<article class="flex flex-col gap-8">
  <ol class="relative border-l border-gray-200 dark:border-gray-700">
    {
      careers.map((career) => (
        <li class="mb-10 ml-6">
          <span class="absolute -left-3 flex h-6 w-6 items-center justify-center rounded-full bg-neutral-100 ring-8 ring-white dark:bg-neutral-900 dark:ring-gray-900">
            <BriefIcon />
          </span>
          <CareerSectionItem career={career} />
        </li>
      ))
    }
  </ol>
</article>
