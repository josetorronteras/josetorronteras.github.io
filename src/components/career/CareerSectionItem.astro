---
import Link from "@/components/shared/Link.astro";
import Badge from "@/components/shared/Badge.astro";
import type { Career } from "@/data/careers";

type Props = {
  career: Career;
};

const { career } = Astro.props;
---

<div class="flex flex-col gap-2">
  <h3
    class="flex flex-row items-center gap-2 text-lg font-semibold text-gray-900 dark:text-white"
  >
    {career.rol}
    {career.current && <Badge text="Current" />}
  </h3>
  <div class="flex flex-row gap-3">
    {
      career.companies.map((career) => (
        <Link href={career.link} label={career.name} underline />
      ))
    }
  </div>
  <div
    class="text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
  >
    <time>{career.startDate}</time> - <time>{career.endDate}</time>
  </div>
  <a
    href={career.app.link}
    class="flex flex-wrap items-center rounded-lg bg-gray-100 hover:bg-gray-200 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 md:max-w-xl md:flex-row"
  >
    <img
      class="h-14 rounded-t-lg object-cover p-2 md:rounded-none md:rounded-s-lg"
      src={career.app.img}
      alt={career.app.name + " logo"}
    />
    <div class="flex flex-col justify-between gap-0 px-2 py-2 leading-normal">
      <h5 class="font-bold tracking-tight text-gray-900 dark:text-white">
        {career.app.name}
      </h5>
      <p class="font-normal text-gray-700 dark:text-gray-400">
        {career.app.description}
      </p>
    </div>
  </a>
</div>
