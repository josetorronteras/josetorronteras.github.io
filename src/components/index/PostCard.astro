---
import ArrowIcon from "@/components/shared/icons/ArrowIcon.astro";
import formatDate from "@/utils/formatDate";

type Props = {
  title: string;
  publishedAt: Date;
  description: string;
  slug: string;
};

const { title, publishedAt, description, slug } = Astro.props;
---

<a
  class="card flex max-w-sm cursor-pointer flex-col gap-2 rounded-md p-4"
  href={`/posts/${slug}`}
>
  <div
    class="flex w-full flex-col justify-between gap-2 md:flex-row md:items-center"
  >
    <p class="text-secondary font-medium">{title}</p>
    <div class="flex flex-wrap items-center gap-4">
      <p class="grow">{formatDate(publishedAt)}</p>
      <ArrowIcon />
    </div>
  </div>
  <p class="truncate">
    {description}
  </p>
</a>
