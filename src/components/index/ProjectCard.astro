---
import Badge from "@/components/shared/Badge.astro";
import ArrowIcon from "@/components/shared/icons/ArrowIcon.astro";
import type { Project } from "@/data/projects";

type Props = Project;

const { title, techs, link, isComingSoon } = Astro.props;
---

<>
  {
    isComingSoon && (
      <div class="card flex w-full flex-col justify-between gap-2 rounded-md p-4 md:flex-row md:items-center">
        <p class="text-secondary font-medium">{title}</p>
        <div class="flex items-center gap-3">
          <div class="grow">
            {techs.map((tech) => (
              <Badge text={tech} />
            ))}
          </div>
          <p class="badge w-fit rounded-md px-4 py-1">Soon</p>
        </div>
      </div>
    )
  }

  {
    !isComingSoon && (
      <a
        class="card flex w-full cursor-pointer flex-col justify-between gap-2 rounded-md p-4 md:flex-row md:items-center"
        href={link}
        target="_blank"
        rel="noreferrer"
      >
        <p class="text-secondary font-medium">{title}</p>
        <div class="flex items-center gap-3">
          <div class="grow">
            {techs.map((tech) => (
              <Badge text={tech} />
            ))}
          </div>
          <ArrowIcon />
        </div>
      </a>
    )
  }
</>
