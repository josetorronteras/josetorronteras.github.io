---
import type { HTMLAttributes } from "astro/types";
import Icon from "./Icon.astro";

type Props = HTMLAttributes<"a"> & {
  icon?: string | null;
  label: string;
  isUnderline?: boolean;
};

const { icon, label, isUnderline, ...props } = Astro.props;

const hasIcon = icon !== null && icon !== undefined;
---

<a
  href={props.href}
  class:list={{
    ["list flex gap-2 items-center"]: hasIcon,
    ["hover:text-neutral-100 cursor-pointer"]: true,
    ["underline decoration-dashed underline-offset-8"]: isUnderline,
  }}
  {...props}
  rel="noreferrer"
  target="_blank"
>
  {hasIcon && <Icon svg={icon!} />}
  {label}
  <span class="sr-only">{label} link</span>
</a>
