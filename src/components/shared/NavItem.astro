---
import type { NavigationItem } from "@/data/navigation";

type Props = {
  item: NavigationItem;
  currentPath: string;
};

const { item, currentPath } = Astro.props;
---

<li>
  <a
    href={item.path}
    class:list={{
      ["hover:text-neutral-100 dark:text-red"]: true,
      ["text-neutral-100"]: `${item.path}` === `${currentPath}`,
    }}
  >
    {item.label}
  </a>
</li>
